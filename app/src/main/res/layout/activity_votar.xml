<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <TextView
        android:id="@+id/votar_tv_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Seleccione su superhéroe favorito"
        android:textSize="20dp" />


    <RadioGroup
        android:id="@+id/votar_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votar_tv_banner"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/votar_rb_spiderman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spiderman" />


        <RadioButton
            android:id="@+id/votar_rb_ironman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron Man" />

        <RadioButton
            android:id="@+id/votar_rb_capitan_america"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capitán América" />

        <RadioButton
            android:id="@+id/votar_rb_capitana_marvel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capitana Marvel" />

        <RadioButton
            android:id="@+id/votar_rb_hulk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hulk" />

        <RadioButton
            android:id="@+id/votar_rb_viuda_negra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viuda Negra" />


        <RadioButton
            android:id="@+id/votar_rb_thor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thor" />

        <RadioButton
            android:id="@+id/votar_rb_doctor_strange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Strange" />
    </RadioGroup>


    <Button
        android:id="@+id/votar_btn_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votar_rg"
        android:layout_centerInParent="true"
        android:text="Votar" />

</RelativeLayout>